            tr(ng-show="vm.firmenbez_2")
              td.bold Firmenbezeichnung 2:
              td {{vm.firmenbez_2}}
            tr(ng-show="vm.firmenbez_3")
              td.bold Firmenbezeichnung 3:
              td {{vm.firmenbez_3}}
            tr
              td.bold Adresse:
              td {{vm.code_land}} - {{vm.plz}} {{vm.ort}} - {{vm.strasse}}
            tr(ng-show="vm.telefon")
              td.bold Telefon:
              td {{vm.telefon}}
            tr(ng-show="vm.fax")
              td.bold Fax:
              td {{vm.fax}}
            tr(ng-show="vm.email")
              td.bold Email:
              td {{vm.email}}
            tr(ng-show="vm.homepage")
              td.bold Homepage:
              td {{vm.homepage}}
            tr

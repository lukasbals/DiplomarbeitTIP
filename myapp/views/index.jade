extends layout

block content
  div(ng-controller="TestCtrl")
    .row
      .col-xs-6
          a.btn.btn-default.btn-block(href='http://localhost:3000/users/') Users
      .col-xs-6
          a.btn.btn-default.btn-block(href='http://localhost:3000/devextreme/') Devextreme
    .row
      .col-xs-12
        h2 Insert Datenbank
          small  Angular
    .row
      .col-xs-5
          input.form-control(ng-model='team', placeholder='Team')
      .col-xs-5
          input.form-control(ng-model='country', placeholder='Land')
      .col-xs-2
          button.btn.btn-default.btn-block(ng-click="insertTeam();", type="submit") Einfügen      
    .row(ng-init="init();")
      .col-xs-12
        table.table
          thead
            tr
              th Team
              th Land
              th Eintrag löschen
          tbody
            tr(ng-repeat="team in teams")
              td {{team.team}}
              td {{team.country}}
              td
                button.btn-sm.btn.btn-danger(ng-click="deleteTeam(team.id);", type="submit") Löschen
    .row
      .col-xs-12
        h2 Input
          small  greeter.ts
    .row
      #input
        .col-xs-5
            input#firstname.form-control(name='firstname', placeholder='First Name')
        .col-xs-5
            input#lastname.form-control(name='lastname', placeholder='Last Name')
        .col-xs-2
            button#submit.btn.btn-default.btn-block(type='button', name='button') Submit
    .row
      .col-xs-12
        h2 Output
    .row
      .col-xs-12
        .jumbotron
          p Hier kommt der Content
          p#content
    script(src="/javascripts/greeter.js")

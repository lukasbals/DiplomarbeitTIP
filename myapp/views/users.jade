extends layout

block content
  div(ng-controller="TestCtrl")
    .row
      .col-xs-12
        h2 Users Page!
    .row
      .col-xs-6
        input.form-control(placeholder="Vorname" ng-model="vorname")
      .col-xs-6
        input.form-control(placeholder="Nachname" ng-model="nachname")
    .row
      .col-xs-12
        .jumbotron
          p Hier wird geschrieben:
          h3 --> {{vorname}} {{nachname}}!
    .row
      .col-xs-6
        input.form-control(placeholder="Zahl eintippen!" ng-model="id")
      .col-xs-6
        button.btn.btn-default(ng-click="getID();") Click
    .row(ng-repeat="content in contents")
      .col-xs-12
        h3 --> {{content.firstName}} {{content.lastName}}
    .row
      .col-xs-12
        a.btn.btn-default(href='http://localhost:3000') Home
